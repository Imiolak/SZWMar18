<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UrbanGame.Views.WelcomePage"
             Title="WelcomePage">

    <StackLayout Padding="10"
                 HorizontalOptions="Center"
                 VerticalOptions="Center">

        <Label Text="Witaj w Grze Miejskiej!"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

        <Button Text="Start"
                FontSize="Medium"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="StartGameButton_Clicked" />

        <Button Text="Jak grać?"
                FontSize="Medium"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="HowToPlayButton_Clicked"/>
        
        <Button Text="Reset DB"
                FontSize="Medium"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="ResetDbButton_Clicked"/>
        </StackLayout>
</ContentPage>